# ===========================================
# WIISOCHAT V2 - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
VITE_OPENAI_API_KEY=sk-sua-chave-openai-aqui
VITE_OPENAI_MODEL=gpt-4.1-2025-04-14
VITE_OPENAI_TEMPERATURE=0.7
VITE_OPENAI_MAX_TOKENS=2000

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
VITE_WHATSAPP_ACCESS_TOKEN=seu-token-whatsapp
VITE_WHATSAPP_PHONE_ID=seu-phone-id
VITE_WHATSAPP_WEBHOOK_VERIFY_TOKEN=seu-verify-token
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=seu-business-account-id

# ===========================================
# INSTAGRAM BUSINESS API
# ===========================================
VITE_INSTAGRAM_ACCESS_TOKEN=seu-token-instagram
VITE_INSTAGRAM_APP_ID=seu-app-id
VITE_INSTAGRAM_APP_SECRET=seu-app-secret

# ===========================================
# GOOGLE CALENDAR API
# ===========================================
VITE_GOOGLE_CLIENT_ID=seu-client-id
VITE_GOOGLE_CLIENT_SECRET=seu-client-secret
VITE_GOOGLE_REDIRECT_URI=https://seu-dominio.com/google-calendar-callback

# ===========================================
# FACEBOOK MARKETING API
# ===========================================
VITE_FACEBOOK_ACCESS_TOKEN=seu-token-facebook
VITE_FACEBOOK_APP_ID=seu-app-id
VITE_FACEBOOK_APP_SECRET=seu-app-secret

# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================
VITE_APP_NAME=WiizoChat v2
VITE_APP_VERSION=2.0.0
VITE_APP_ENV=development
VITE_APP_URL=https://seu-dominio.com

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
VITE_SESSION_TIMEOUT=480
VITE_MAX_IDLE_TIME=60
VITE_ENABLE_ACTIVITY_MONITORING=true
VITE_ENABLE_DATA_SANITIZATION=true
VITE_ALLOWED_ORIGINS=https://seu-dominio.com,https://api.seu-dominio.com

# ===========================================
# CONFIGURAÇÕES DE IA
# ===========================================
VITE_AI_TEMPERATURE=0.7
VITE_AI_MAX_TOKENS=2000
VITE_AI_STREAMING=true
VITE_AI_MODEL=gpt-4.1-2025-04-14

# ===========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ===========================================
VITE_ENABLE_SOUND_NOTIFICATIONS=true
VITE_NOTIFICATION_VOLUME=0.8
VITE_NOTIFICATION_INTERVAL=10000
VITE_PUSH_NOTIFICATIONS_ENABLED=true

# ===========================================
# CONFIGURAÇÕES DE ANALYTICS
# ===========================================
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=seu-token-mixpanel
VITE_HOTJAR_ID=seu-id-hotjar

# ===========================================
# CONFIGURAÇÕES DE STORAGE
# ===========================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
VITE_STORAGE_BUCKET=documents

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_WINDOW=3600000
VITE_OPENAI_RATE_LIMIT=1000
VITE_WHATSAPP_RATE_LIMIT=1000

# ===========================================
# CONFIGURAÇÕES DE DEBUG
# ===========================================
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_NETWORK_LOGS=false

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================
VITE_DEV_MODE=true
VITE_MOCK_API=false
VITE_USE_LOCAL_STORAGE=true
VITE_ENABLE_HOT_RELOAD=true
